/**
 * 发送验证码
 */
$(function(){
	$("#sendV").removeAttr("disabled");
	$("input[name='verifictionCode']").val("");
	$("#sendV").click(function(){
		if(!$("input[name='uEmail']").val()){
			alert("请填写邮箱地址！");
			return false;
		}
		$.post(contextPath+"/toSendVerifictionCode.life",{"uEmail":$("input[name='uEmail'").val()});
		$(this).attr("disabled","disabled");
		sendNum(this,60);
	});
	
});

/**
 * 发送验证码按钮效果
 * @param value
 * @param initTime
 */
function sendNum(value,initTime){
	t = setTimeout(function(){sendNum(value,initTime)}, 1000);
	if(initTime == 0){
		$(value).removeAttr("disabled");
		$(value).text("发送验证码");
		initTime = 60;
		clearTimeout(t);
	}else{
		$(value).attr("disabled","disabled");
		$(value).text(initTime+"秒后重发");
		initTime--;
	}
}

/**
 * 注册
 */
$(function(){
	$("#regBtn").click(function(){
		if(!$("input[name='uName']").val()){
			alert("注册账号不能为空！");
			return false;
		}
		if(!$("input[name='uEmail']").val()){
			alert("请填写邮箱地址！");
			return false;
		}
		if(!$("input[name='verifictionCode']").val()){
			alert("验证码不能为空！");
			return false;
		}
	});
});





