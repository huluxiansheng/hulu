/**
 * 注册页面
 */
var initTime = 60;
$(function(){
	$("#sendV").click(function(){
		$.post(contextPath+"/toSendVerifictionCode.life",{"uEmail":$("input[name='uEmail'").val()});
		$(this).attr("disabled","disabled");
		sendNum(this);
	});
	
});

function sendNum(value){
	t = setTimeout(function(){sendNum(value)}, 1000);
	if(initTime == 0){
		$(value).removeAttr("disabled");
		$(value).text("发送验证码");
		initTime = 60;
		clearTimeout(t);
	}else{
		$(value).attr("disabled","disabled");
		$(value).text(initTime+"秒后重发");
		initTime--;
	}
}
